#!/bin/env ruby

require 'socket'

s = Socket.new Socket::PF_INET, Socket::SOCK_STREAM
s.connect Socket.pack_sockaddr_in(8008, '192.168.1.201')

while line = s.gets
  puts 'sds'
  if line == 'whoareyou' then
    s.puts 'client'
    s.puts ARGV.join(' ').chomp
  end

  if line == 'result' then
    puts line
  end
end

s.close
