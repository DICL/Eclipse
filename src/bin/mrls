#!/bin/sh

numslave=$(awk '$1=="num_slave"{print $2}' $MR_HOME/setup.conf)

echo -e "\033[0;32mraven01:\033[0m"
ssh raven01 ls -a $DHT_PATH

for ((i=2;i<=numslave;i++))
do
	if ((i<10))
	then
		echo
		echo -e "\033[0;32mraven0$i:\033[0m"
		ssh raven0$i ls -a $DHT_PATH
	else
		echo
		echo -e "\033[0;32mraven$i:\033[0m"
		ssh raven$i ls -a $DHT_PATH
	fi
done

